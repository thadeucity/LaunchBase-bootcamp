{% extends "layout.njk" %}

{% block content %}

<div class="card">

  <section class="avatar" style="background: url({{teacher.avatar_url}}) no-repeat center center / cover"></section>
  <section class="info">
  
    <h3>Edit Teacher</h3>

    <form class="teacher-form" method="POST" action="/teachers?_method=PUT">

      {% include 'teachers/form.njk'%}

      <input 
        type="hidden"
        name="id"
        value="{{teacher.id}}"
      >

      <div class="btn-grid">
        <button class="save-btn" type="submit">Save</button>
      </div>

    </form>

    <form id="form-delete" class="delete" method="POST" action="/teachers?_method=DELETE">

      <input 
        type="hidden"
        name="id"
        value="{{teacher.id}}"
      > 

      <div class="btn-grid">
        <button class="delete-btn" type="submit">Delete</button>
      </div>

    </form>

  </section>

</div>

{% include 'confirm.njk'%}

{% endblock content %}