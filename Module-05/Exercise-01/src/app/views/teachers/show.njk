{% extends "layout.njk" %}

{% block content %}

<div class="card">

  <section class="avatar" style="background: url({{teacher.avatar_url}}) no-repeat center center / cover"></section>
  <section class="info">
  
    <h3>Teacher - Info</h3>

    <div class="details">
      <div class="item">
        <div>Name</div>
        <div>{{teacher.name}}</div>
      </div>

      <div class="item">
        <div>Age</div>
        <div>{{teacher.age}}</div>
      </div>

      <div class="item">
        <div>Degree</div>
        <div>{{teacher.degree}}</div>
      </div>

      <div class="item">
        <div>Teaching Place</div>
        <div>
          {% for place in teacher.place %}
            <span>{{place}}</span>
          {% endfor %}
        </div>
      </div>

      <div class="item">
        <div>Teaching Areas</div>
        <div>
          {% for area in teacher.teaching_area %}
            <span>{{area}}</span>
          {% endfor %}
        </div>
      </div>

      <div class="item">
        <div>User Since</div>
        <div>{{teacher.created_at}}</div>
      </div>
    </div>

    <a href="/teachers/{{teacher.id}}/edit" class="button">Edit</a>

  </section>

</div>

{% endblock content %}