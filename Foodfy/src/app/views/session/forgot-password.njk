{% extends "./layout.njk" %}

{% block content %}

<form class="admin-form session" action="/admin/forgot-password" method="POST">

  <h1>Forgot your Password?</h1>

  <div class="item">
    <div>Email</div>
    <div class="input">
      <input 
        type="email" 
        name="email"
        placeholder="Type your email"
        value="{{user.email}}"
        onkeydown="Validate.apply(this, 'isEmail')"
        onblur="Validate.apply(this, 'isEmail', true)"
      >
    </div>
  </div> 

  <div class="session-options">
    <button type="submit">Recover</button>
  </div>
  

</form>

{% endblock %}