<div class="item">
  <div>Email</div>
  <div class="input">
    <input 
      type="email" 
      name="email"
      placeholder="Type your email"
      value="{{email}}"
      onkeydown="Validate.apply(this, 'isEmail')"
      onblur="Validate.apply(this, 'isEmail', true)"
    >
  </div>
</div>

<div class="item">
  <div>Password</div>
  <div class="input">
    <input 
      type="password" 
      placeholder="Type your new password"
      name="password"
      onkeydown="Validate.apply(this, 'isPasswordSafe')"
      onblur="Validate.apply(this, 'isPasswordSafe', true)"
    >
  </div>
</div> 

<div class="item">
  <div>Repeat Password</div>
  <div class="input">
    <input 
      type="password" 
      placeholder="Repeat your new password"
      name="password_repeat"
    >
  </div>
</div> 

<input type="hidden" name="token" value="{{token}}">