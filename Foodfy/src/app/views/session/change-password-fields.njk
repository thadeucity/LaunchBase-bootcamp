<div class="item">
  <div>Email</div>
  <div class="input">
    <input 
      type="email" 
      name="email"
      placeholder="Type your email"
      value="{{user.email}}"
      onkeydown="Validate.apply(this, 'isEmail')"
      onblur="Validate.apply(this, 'isEmail', true)"
    >
  </div>
</div>

<div class="item">
  <div>Old Password</div>
  <div class="input">
    <input 
      type="password" 
      placeholder="Type your new password"
      name="password"
    >
  </div>
</div> 

<div class="item">
  <div>New Password</div>
  <div class="input">
    <input 
      type="password" 
      placeholder="Type your new password"
      name="new_password"
      onkeydown="Validate.apply(this, 'isPasswordSafe')"
      onblur="Validate.apply(this, 'isPasswordSafe', true)"
    >
  </div>
</div> 

<div class="item">
  <div>Repeat New Password</div>
  <div class="input">
    <input 
      type="password" 
      placeholder="Repeat your new password"
      name="password_repeat"
    >
  </div>
</div>