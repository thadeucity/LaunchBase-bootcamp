<div class="item">
  <div>Recipe Images</div>
  <div class="upload-grid">
    <div class="img-upload">
      <i class="material-icons">add</i>
      <input 
        id="img-input"
        type="file" 
        name="photos"
        multiple
        accept="image/*"
        onchange="ImgUpload.handleFileInput(event)"
      >
    </div>
      {% if recipe.files %}
        {% for image in recipe.files %}
          <div class="photo" id="{{image.id}}">
            <img src="{{image.src}}" alt="{{image.name}}">
            <i class="material-icons"
              onclick="ImgUpload.removeOldPhoto(event)"
            >
            close
            </i>
          </div>
        {% endfor %}
        <input type="hidden" name="removed_files">
      {% endif %}
  </div>
</div>

<div class="item">
  <div>Recipe Name</div>
  <div>
    <input 
      type="text" 
      name="title"
      value="{{recipe.title}}"
    >
  </div>
</div>

<div class="item">
  <div>Chef</div>
  <div>
    <select name="chef_id">
    
    {% for chef in chefs %}
      <option value="{{chef.id}}"
      {% if chef.id == recipe.chef_id %} selected {% endif %}
      >{{chef.name}}</option>
    {% endfor %}
    
    </select>
  </div>
</div>

<div class="item">
  <div>Ingredients</div>
  <div id="ingredients">
    {% if recipe.ingredients %}
      {% for ingredient in recipe.ingredients %}
        <div class="ingredient">
          <input 
            type="text" 
            name="ingredients[]"
            value="{{ingredient}}"
          >
        </div>
      {% endfor %}
    {% else %}
      <div class="ingredient">
        <input 
          type="text" 
          name="ingredients[]"
          value=""
        >
        </div>
    {% endif %}
  </div>
  <a href="#" onclick="" class="add-field" name="ingredient">Add Ingredient</a>
  <a href="#" onclick="" class="remove-fields" name="ingredient">Remove Blanks</a>
</div>

<div class="item">
  <div>Recipe Steps</div>
  <div id="steps">
    {% if recipe.preparation %}
      {% for step in recipe.preparation %}
        <div class="step">
          <input 
            type="text" 
            name="preparation[]"
            value="{{step}}"
          >
        </div>
      {% endfor %}
    {% else %}
      <div class="step">
        <input 
          type="text" 
          name="preparation[]"
          value="{{step}}"
        >
        </div>
    {% endif %}
  </div>
  <a href="#" onclick="" class="add-field" name="step">Add Step</a>
  <a href="#" onclick="" class="remove-fields" name="step">Remove Blanks</a>
</div> 

<div class="item">
  <div>Adtional Info</div>
  <div>
    <textarea name ="information">{{recipe.information}}</textarea>
  </div>
</div> 