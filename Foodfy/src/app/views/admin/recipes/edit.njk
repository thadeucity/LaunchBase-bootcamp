{% extends "admin_layout.njk" %}

{% block content %}

  <div class="delete-container">
    <form class="admin-delete-form" action="/admin/recipes?_method=DELETE" method="POST">
      <input type="hidden" name="id" value="{{recipe.id}}">
      <button type="submit">Delete</button>
    </form>
  </div>


<form class="admin-form" action="/admin/recipes?_method=PUT" method="POST" enctype="multipart/form-data">

  <div class="admin-top-bar">
        <h1>Edit Recipe: {{recipe.title}}</h1>
        <button type="submit">Save recipe</button>
  </div>

  {% include 'admin/recipes/fields.njk'%}

  <input type="hidden" name="id" value="{{recipe.id}}">

</form>

{% endblock %}