{% extends "admin_layout.njk" %}

{% block content %}

<div class="admin-top-bar">
      <h1>Users</h1>
      {% if admin %}
        <a href="/admin/users/create">New User</a>
      {% endif %}
</div>

<div class="users-grid">

  {% for user in users %}
    <div class="card-user" id="{{user.id}}">
      <h2>{{user.name}}</h2>
      <p>{{user.email}}</p>

      {% if admin %}
        <div class="manage-user">
          <a href="/admin/users/{{user.id}}/edit">Edit</a>
          <form action="/admin/users?_method=DELETE" method="post">
            <input type="hidden" name="id" value="{{user.id}}">
            <button>Remove</button>
          </form>
        </div>
      {% endif %}

    </div>
  {% endfor %}

</div>

{% endblock %}