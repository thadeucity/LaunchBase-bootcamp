{% extends "layout.njk" %}

{% block content %}

<main>
  
  <div id="banner">
    <div class="info">
      <h1>The best recipes</h1>
      <p>
        Learn to build the best plates with recipes created
        from professionals all around the world.
      </p>
    </div>
    <div class="image">
      <img src="/img/chef.png" alt="Chef Ilustration">
    </div>
  </div>

  <h2>Most viewed</h2>
  <div class="recipe-list">

    {% for recipe in recipeList %}

      <div class="card" id="{{ loop.index0 }}">
        <img src="{{recipe.image}}" alt="image {{recipe.title}}">
        <div class="card-info">
          <p>{{recipe.title}}</p>
          <p class="author">by {{recipe.author}}</p>
        </div>
      </div>

    {% endfor %}

  </div>

</main>

<script src="/scripts.js"></script>

{% endblock %}